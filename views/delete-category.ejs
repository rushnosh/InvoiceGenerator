<%- include('includes/header') %>

  <!-- header ends here -->
  
  <div class="container py-md-5 container--narrow">

    <%- include('includes/flash') %>

    <h2>Category to be removed: <%= deleteCategory.categoryTitle %></h2>

    <a class="small font-weight-bold" href="/create-category">&laquo; Back to view All Categories</a>

    <form class="mt-3" action="/category/<%= deleteCategory._id %>/delete" method="POST">
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <label for="delete">Are you sure you want to delete this Category?</label><br>
            <button class="btn btn-primary mt-1">Delete Now</button>
        </div>
    </form>
    <a href="/create-category" class="btn btn-secondary mt-1"> Cancel</a> 
  </div>
  
  <%- include('includes/footer') %>