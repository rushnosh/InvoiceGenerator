<%- include('includes/header') %>

  <!-- header ends here -->
  
  <div class="container py-md-5 container--narrow">

    <%- include('includes/flash') %>

    <h2>Client to be removed: <%= deleteClient.clientTitle %></h2>

    <a class="small font-weight-bold" href="/view-clients">&laquo; Back to view All Clients</a>

    <form class="mt-3" action="/client/<%= deleteClient._id %>/delete" method="POST">
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <label for="delete">Are you sure you want to delete this Client?</label><br>
            <button class="btn btn-primary mt-1">Delete Now</button>
        </div>
    </form>
    <a href="/view-clients" class="btn btn-secondary mt-1"> Cancel</a> 
  </div>
  
  <%- include('includes/footer') %>